<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_overlapTop="200dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ProfileView"
    tools:showIn="@layout/profile_view"

    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="@dimen/activity_vertical_margin"
        >
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin"

        >

    <TextView   android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PERSONAL INFORMATIONS"
        />

    <View android:layout_width="match_parent"
        android:layout_height="0.50dp"
        android:background="@color/colorChocolate"
        android:layout_marginTop="9dp"/>

        <LinearLayout    android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Display Name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="right"
                android:id="@+id/display_name"/>

        </LinearLayout>
        <LinearLayout    android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Age"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/age"/>

        </LinearLayout>
        <LinearLayout    android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Gender"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/prof_gender"/>

        </LinearLayout>
        <LinearLayout    android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Marital Status"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/prof_marital_status"/>

        </LinearLayout>
        <LinearLayout    android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Country"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:id="@+id/country"/>

        </LinearLayout>
    </LinearLayout>

        <View android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorChocolate"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_vertical_margin"

        >
        <TextView   android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PREFERENCES"
            />

        <View android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:background="@color/colorChocolate"
            android:layout_marginTop="9dp"/>
    </LinearLayout>L

    </LinearLayout>




</android.support.v4.widget.NestedScrollView>
